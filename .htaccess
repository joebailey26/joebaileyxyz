ErrorDocument 404 https://joebailey.xyz

<IfModule mod_rewrite.c>
RewriteEngine on

RewriteBase /
RewriteRule ^index\.php$ / [NC,R,L]


RewriteCond %{HTTP_HOST} ^www\.joebailey\.xyz [NC]
RewriteRule ^(.*)$ https://joebailey.xyz/$1 [L,R=301]


RewriteCond %{THE_REQUEST} /([^.]+)\.php [NC]
RewriteRule ^ /%1 [NC,L,R]


RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^ %{REQUEST_URI}.php [NC,L]

</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(ttf|otf|eot|woff|woff2|css|js|php|json|TTF)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>