ErrorDocument 404 https://joebailey.xyz

<IfModule mod_rewrite.c>
RewriteEngine on

RewriteBase /
RewriteRule ^index\.php$ / [NC,R,L]


RewriteCond %{HTTP_HOST} ^www\.joebailey\.xyz [NC]
RewriteRule ^(.*)$ https://joebailey.xyz/$1 [L,R=301]


RewriteCond %{THE_REQUEST} /([^.]+)\.php [NC]
RewriteRule ^ /%1 [NC,L,R]


RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^ %{REQUEST_URI}.php [NC,L]

</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(ttf|css|js|json)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>

# One year for image files
<filesMatch ".(jpg|jpeg|png|gif|ico|webp|ttf|svg|json|pdf|md|xml)$">
Header set Cache-Control "max-age=31536000, public"
</filesMatch>

# One month for js
<filesMatch ".(js)$">
Header set Cache-Control "max-age=604800, public"
</filesMatch>

# One day for css
<filesMatch ".(css)$">
Header set Cache-Control "max-age=86400, public"
</filesMatch>